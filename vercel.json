{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/weather",
            "destination": "/api/weather"
        },
        {
            "source": "/api/geocoding",
            "destination": "/api/geocoding"
        }
    ],
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET, POST, OPTIONS"
                }
            ]
        }
    ]
}